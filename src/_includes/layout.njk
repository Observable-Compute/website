    <meta name="description" content="{{ description | default('Empirical Mapping of Technology Language Evolution. Tracking terminology across research, legal, industry, and public domains.') }}">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/icon.png">
    
    <!-- Open Graph -->
    <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}Observable Compute Foundation">
    <meta property="og:description" content="{{ description | default('Empirical Mapping of Technology Language Evolution') }}">
    <meta property="og:image" content="https://observablecompute.org/images/banner.png">
    <meta property="og:url" content="https://observablecompute.org{{ page.url }}">
